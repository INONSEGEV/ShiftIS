<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#CC282828"
                app:cardCornerRadius="24dp"
                app:cardElevation="30dp"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <!-- כותרת -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="על הבדיקה"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginBottom="40dp" />

                    <!-- שדות טקסט -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם בודק"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />
                    <EditText
                        android:id="@+id/checkerEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם קבלן ביצוע"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />
                    <EditText
                        android:id="@+id/contractorEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="נוכחים בשעת הבדיקה"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />
                    <EditText
                        android:id="@+id/presentEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- כפתורי הקלטה -->
                    <Button
                        android:id="@+id/btnStartSpeech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="התחל הקלטה"
                        android:layout_marginTop="20dp"/>

                    <Button
                        android:id="@+id/btnStopSpeech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="עצור הקלטה"
                        android:layout_marginTop="10dp"/>

                    <!-- כפתורי תאריך ותמונה נשארים -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPickDate"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="בחר תאריך"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="10dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnTime"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="בחר שעה"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="10dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="בחר תמונת פרוייקט"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="15dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_background"
                            android:scaleType="centerCrop"
                            android:contentDescription="בחר או צלם תמונה"
                            app:shapeAppearanceOverlay="@style/RoundedCornersImage" />

                        <ImageButton
                            android:id="@+id/btnDeleteImage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="8dp"
                            android:background="@drawable/fancy_edittext"
                            android:src="@drawable/ic_close_white"
                            android:contentDescription="מחק תמונה"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
