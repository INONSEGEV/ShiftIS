<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# ==== Java ====&#xA;Write-Output &quot;=== Java Files Detailed Report ===&quot;&#xA;$javaFiles = Get-ChildItem -Recurse -Include *.java | Where-Object { $_.FullName -notmatch &quot;build|\.gradle&quot; }&#xA;$javaTotalLines = 0&#xA;&#xA;foreach ($file in $javaFiles) {&#xA;    $lines = (Get-Content $file.FullName | Measure-Object -Line).Lines&#xA;    $javaTotalLines += $lines&#xA;    Write-Output ($file.FullName + &quot; : &quot; + $lines + &quot; lines&quot;)&#xA;}&#xA;&#xA;Write-Output (&quot;Java files count: &quot; + $javaFiles.Count)&#xA;Write-Output (&quot;Java total lines: &quot; + $javaTotalLines)&#xA;&#xA;# ==== XML ====&#xA;Write-Output &quot;`n=== XML Files Detailed Report ===&quot;&#xA;$xmlFiles = Get-ChildItem -Recurse -Include *.xml | Where-Object { $_.FullName -notmatch &quot;build|\.gradle&quot; }&#xA;$xmlTotalLines = 0&#xA;&#xA;foreach ($file in $xmlFiles) {&#xA;    $lines = (Get-Content $file.FullName | Measure-Object -Line).Lines&#xA;    $xmlTotalLines += $lines&#xA;    Write-Output ($file.FullName + &quot; : &quot; + $lines + &quot; lines&quot;)&#xA;}&#xA;&#xA;Write-Output (&quot;XML files count: &quot; + $xmlFiles.Count)&#xA;Write-Output (&quot;XML total lines: &quot; + $xmlTotalLines)&#xA;&#xA;# ==== Total Summary ====&#xA;Write-Output &quot;`n=== Total Summary ===&quot;&#xA;$totalFiles = $javaFiles.Count + $xmlFiles.Count&#xA;$totalLines = $javaTotalLines + $xmlTotalLines&#xA;Write-Output (&quot;Total files: &quot; + $totalFiles)&#xA;Write-Output (&quot;Total lines: &quot; + $totalLines)&#xA;" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="20dp">

        <!-- תוכן המסך -->
        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#CC282828"
                app:cardCornerRadius="24dp"
                app:cardElevation="30dp"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <!-- Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="על הבדיקה"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginBottom="40dp" />

                    <!-- Error Message -->
                    <TextView
                        android:id="@+id/errorMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff6b6b"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/error_background"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:alpha="0" />

                    <!-- Email Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם בודק"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />

                    <EditText
                        android:id="@+id/checkerEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- Password Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="שם קבלן ביצוע"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />

                    <EditText
                        android:id="@+id/contractorEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="נוכחים בשעת הבדיקה"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/presentEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPickDate"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="בחר תאריך"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="10dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="בחר תמונת פרוייקט"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="15dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_background"
                            android:scaleType="centerCrop"
                            android:contentDescription="בחר או צלם תמונה"
                            app:shapeAppearanceOverlay="@style/RoundedCornersImage" />

                        <ImageButton
                            android:id="@+id/btnDeleteImage"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="8dp"
                            android:background="@drawable/fancy_edittext"
                            android:src="@drawable/ic_close_white"
                            android:contentDescription="מחק תמונה"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
