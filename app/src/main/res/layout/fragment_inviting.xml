<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="20dp"
        android:layout_marginBottom="100dp">

        <!-- תוכן המסך -->
        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#CC282828"
                app:cardCornerRadius="24dp"
                app:cardElevation="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <!-- Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_the_guest"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginBottom="40dp" />

                    <!-- Error Message -->
                    <TextView
                        android:id="@+id/errorMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff6b6b"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/error_background"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:alpha="0" />

                    <!-- Email Field -->
                    <!-- שם המזמין -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_of_the_person_ordering"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="text"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- שם משפחת המזמין -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name_of_the_inviter"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/lastNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="text"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- טלפון המזמין -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ordering_party_s_phone_number"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="phone"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- אימייל -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- חברה -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/company"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/companyEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="text"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- עיר -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/cityEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="text"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- רחוב -->
                    <TextView
                        android:layout_width="32dp"
                        android:layout_height="19dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/street"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <EditText
                        android:id="@+id/streetEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="text"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- מספר בניין -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/building_number"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/buildingNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="number"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- מספר דירה -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apartment_number"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/apartmentNumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="number"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- מידע נוסף -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_information"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />
                    <EditText
                        android:id="@+id/additionalInfoEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="text"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="200"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />
                    />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
