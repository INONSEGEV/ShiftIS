<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:padding="20dp">

        <!-- תוכן המסך -->
        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#CC282828"
                app:cardCornerRadius="24dp"
                app:cardElevation="30dp"
                android:layout_marginBottom="100dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <!-- Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_the_test"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:layout_marginBottom="40dp" />

                    <!-- Error Message -->
                    <TextView
                        android:id="@+id/errorMsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ff6b6b"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/error_background"
                        android:padding="12dp"
                        android:visibility="gone"
                        android:alpha="0" />

                    <!-- Email Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_checker"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />

                    <EditText
                        android:id="@+id/checkerEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <!-- Password Field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_of_the_contractor"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="4dp" />

                    <EditText
                        android:id="@+id/contractorEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/present_at_the_time_of_the_examination"
                        android:textColor="#e0e0e0"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/presentEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/input_background"
                        android:textColor="#ffffff"
                        android:textColorHint="#66ffffff"
                        android:textSize="16sp"
                        android:padding="18dp"
                        android:layout_marginBottom="20dp"
                        android:maxLength="50"
                        android:layoutDirection="rtl"
                        android:textDirection="rtl" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPickDate"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="@string/select_a_date"
                        android:textColor="#ffffff"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"
                        android:layout_marginTop="10dp"/>
                    <!-- Image Picker Section -->

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="@string/select_a_project_image"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textAllCaps="false"
                        android:background="@drawable/button_background"
                        android:layout_marginBottom="20dp"/>
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/input_background"
                        android:scaleType="centerCrop"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="בחר או צלם תמונה" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
