<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Loading_page">

    <!-- רקע מונפש עם חלקיקים -->
    <View
        android:id="@+id/particle1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/particle_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/particle2"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/particle_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/particle3"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/particle_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- מיכל הלוגו הראשי -->
    <LinearLayout
        android:id="@+id/logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- עיגול חיצוני מסתובב -->
        <FrameLayout
            android:id="@+id/orbit_container"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_marginBottom="24dp">

            <!-- עיגול חיצוני ראשון -->
            <View
                android:id="@+id/orbit_ring1"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:background="@drawable/orbit_ring" />

            <!-- עיגול חיצוני שני -->
            <View
                android:id="@+id/orbit_ring2"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:background="@drawable/orbit_ring_light" />

            <!-- נקודות על העיגולים -->
            <View
                android:id="@+id/orbit_dot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="-130dp"
                android:background="@drawable/orbit_dot" />

            <View
                android:id="@+id/orbit_dot2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_marginStart="160dp"
                android:background="@drawable/orbit_dot" />

            <!-- מלבן הלוגו המרכזי -->
            <androidx.cardview.widget.CardView
                android:id="@+id/logo_symbol_card"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:cardCornerRadius="24dp"
                app:cardElevation="30dp"
                app:cardBackgroundColor="#95404040"                android:foreground="@drawable/logo_glassmorphism_effect">

                <!-- מיכל הסמל הגרפי -->
                <FrameLayout
                    android:id="@+id/logo_icon_container"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center">

                    <!-- מעגל חיצוני מונפש -->
                    <View
                        android:id="@+id/animated_circle"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:background="@drawable/animated_circle" />

                    <!-- יהלום מרכזי -->
                    <ImageView
                        android:id="@+id/diamond_shape"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/diamond_vector"
                        android:alpha="0.9" />

                    <!-- משולש פנימי -->
                    <ImageView
                        android:id="@+id/inner_triangle"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/triangle_vector"
                        android:alpha="0.7" />

                    <!-- נקודה מרכזית -->
                    <View
                        android:id="@+id/center_dot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/center_dot" />

                    <!-- קו אופקי -->
                    <View
                        android:id="@+id/horizontal_line"
                        android:layout_width="30dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/horizontal_line"
                        android:alpha="0.5" />

                    <!-- עיגולים קטנים -->
                    <View
                        android:id="@+id/small_circle1"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="36dp"
                        android:background="@drawable/small_circle"
                        android:alpha="0.6" />

                    <View
                        android:id="@+id/small_circle2"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="36dp"
                        android:background="@drawable/small_circle"
                        android:alpha="0.6" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <!-- טקסט הלוגו -->
        <LinearLayout
            android:id="@+id/logo_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- כותרת ראשית -->
            <TextView
                android:id="@+id/logo_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upkeep"
                android:textSize="32sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textColor="#FFFFFF"
                android:shadowRadius="10"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif" />

            <!-- קו מפריד -->
            <View
                android:id="@+id/separator_line"
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@drawable/separator_line"
                android:layout_marginBottom="8dp"
                android:alpha="0.3" />

            <!-- כותרת משנה -->
            <TextView
                android:id="@+id/logo_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:alpha="0.7"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.05"
                android:text="@string/create_a_report"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/By"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:alpha="0.7"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.05"
                android:text="Shift Cttl IS"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- אינדיקטור טעינה (אופציונלי) -->
    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:textColor="#FFFFFF"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>