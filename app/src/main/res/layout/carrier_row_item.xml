<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="5dp"
            android:elevation="2dp">

            <!-- מספר מיקום -->
            <TextView
                android:id="@+id/positionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/subTopicText"
                app:layout_constraintBottom_toBottomOf="@id/subTopicText"
                android:layout_marginEnd="8dp"/>

            <!-- טקסט ראשי -->
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/subTopicText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:text="New"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/menuButton"
                app:layout_constraintStart_toEndOf="@id/positionNumber"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- כפתור תפריט Popup -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/baseline_more_horiz_24"
                android:contentDescription="Menu"
                android:scaleType="centerInside"
                style="?android:attr/borderlessButtonStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
