<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#CC282828"
            app:cardCornerRadius="24dp"
            app:cardElevation="30dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ממצא חדש"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>

                <!-- שדות קיימים -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="נושא"
                    android:textColor="#e0e0e0"
                    android:textStyle="bold"/>

                <!-- AutoCompleteTextView במקום EditText -->
                <AutoCompleteTextView
                    android:id="@+id/carrierEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/input_background"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:completionThreshold="1" /> <!-- מתחיל להציע אחרי תו אחד -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="תת נושא"
                    android:textColor="#e0e0e0"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/SubTopicEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/input_background"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="תאור"
                    android:textColor="#e0e0e0"
                    android:textStyle="bold"/>
                <AutoCompleteTextView
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/input_background"
                    android:textColor="#ffffff"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="הערה"
                    android:textColor="#e0e0e0"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/remarkEditText"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/input_background"
                    android:padding="12dp"
                    android:textColor="#ffffff" />

                <!-- שאר הקוד נשאר ללא שינוי -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStandardItem"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="הוספת ניגוד תקן"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewStandard"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:scrollbars="vertical"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    android:padding="4dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRecommendationsItem"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="הוספת המלצת מחיר"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:clipToPadding="false"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:scrollbars="vertical" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPickDate"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="בחר תאריך"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSelectImage"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:text="בחר תמונות"
                        android:background="@drawable/button_background"
                        android:textColor="#ffffff" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCaptureImage"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="צלם תמונות"
                        android:background="@drawable/button_background"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewImages"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scrollbars="horizontal"
                    android:clipToPadding="false"
                    android:visibility="gone"
                    android:padding="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
